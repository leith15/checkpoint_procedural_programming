PROCEDURE dot_product(v1:ARRAY-OF Float[],v2:ARRAY-OF Float[], VAR produit_scalaire: Float)
VAR 
 i: Integer;
 produit: Float;

 Begin
  produit:=0;
  For i FROM 0 TO v1.length-1 STEP 1 DO
  produit:=produit+v1[i]*v2[i];
 END-FOR;
 produit_scalaire:=produit;
  END


